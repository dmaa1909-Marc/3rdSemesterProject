
@using WebServer.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

@Styles.Render("~/Content/GameStyle")
@Styles.Render("~/Content/LobbyStyle")


<script>
    $('body').append('<div id="table"></div>')
</script>

<div class="menu-container">

    <div class="container-logo">Decks</div>

    <div class="container-content">

        <div class="center">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "decks-form", role = "form" })) {

                @Html.AntiForgeryToken()




                @Html.ValidationSummary(true, "", new { @class = "decks-danger" })
                <div>
                    @Html.LabelFor(m => m.Email, new { @class = "decks-lbl" })

                    @Html.TextBoxFor(m => m.Email, new { @class = "text-field" })
                </div>

                <div class="danger-area">
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(m => m.Password, new { @class = "decks-lbl" })

                @Html.PasswordFor(m => m.Password, new { @class = "text-field" })

                <div class="danger-area">
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="decks-checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe, new { @class = "check-box-lbl" })
                </div>
                <input type="submit" value="Log in" class="decks-btn" />
                <br />
                <p>
                    @Html.ActionLink("Register as a new user", "Register")
                </p>

                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </div>

    </div>

</div>

<div id="suit-logo"></div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

