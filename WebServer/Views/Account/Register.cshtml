

@model WebServer.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



@Styles.Render("~/Content/GameStyle")
@Styles.Render("~/Content/LobbyStyle")


<script>
    $('body').append('<div id="table"></div>')
</script>

<div class="menu-container">

    <div class="container-logo">Decks</div>

    <div class="container-content">

        <div class="center">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "decks-form", role = "form" })) {
                @Html.AntiForgeryToken()
                <h5>Create a new account.</h5>

                @Html.ValidationSummary("", new { @class = "decks-danger" })



                @Html.LabelFor(m => m.Email, new { @class = "decks-lbl" })

                @Html.TextBoxFor(m => m.Email, new { @class = "text-field" })


                <div>
                    @Html.LabelFor(m => m.Password, new { @class = "decks-lbl" })

                    @Html.PasswordFor(m => m.Password, new { @class = "text-field" })
                </div>

                <div>
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "decks-lbl" })

                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-field" })
                </div>

                <input type="submit" class="decks-btn" value="Register" />

            }







        </div>



    </div>

</div>

<div id="suit-logo"></div>