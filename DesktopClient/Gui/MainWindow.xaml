<Window x:Class="DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopClient" xmlns:ui="clr-namespace:System.Web.UI;assembly=System.Web"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="800" MinHeight="520" MinWidth="800">
    <TabControl SelectionChanged="TabControl_SelectionChanged">
        <TabItem Header="Users">
            <local:UsersControl/>
        </TabItem>
        <TabItem Header="Store">
            <local:StoreControl/>
        </TabItem>
    </TabControl>
</Window>
